{% extends "layouts/base.html.twig" %}

{% block title %}{{ annonce.title }} - Broceliande Immo{% endblock %}

{% block content %}
<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ url() }}">Accueil</a></li>
            <li class="breadcrumb-item">
                {% if annonce.category == 'vente' %}
                    <a href="{{ url('annonces/vente') }}">Vente</a>
                {% else %}
                    <a href="{{ url('annonces/location') }}">Location</a>
                {% endif %}
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ annonce.title }}</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Galerie d'images -->
        <div class="col-md-8 mb-4">
            {% if annonce.images is empty %}
                <img src="{{ asset('img/default-property.jpg') }}" class="img-fluid rounded" alt="Image par défaut">
            {% else %}
                <div id="carouselAnnonce" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% for image in annonce.images %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ asset('uploads/annonces/' ~ image.file_path) }}" class="d-block w-100 rounded" alt="Image {{ loop.index }}" style="height: 400px; object-fit: cover;">
                            </div>
                        {% endfor %}
                    </div>
                    {% if annonce.images|length > 1 %}
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselAnnonce" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Précédent</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselAnnonce" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Suivant</span>
                        </button>
                    {% endif %}
                </div>
            {% endif %}
        </div>

        <!-- Informations principales -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title h4">{{ annonce.title }}</h1>
                    <p class="h2 text-primary mb-3">
                        {% if annonce.category == 'location' %}
                            {{ annonce.price|number_format(0, ',', ' ') }} €/mois
                            {% if annonce.charges %}
                                <small class="text-muted">(+ {{ annonce.charges|number_format(0, ',', ' ') }} € charges)</small>
                            {% endif %}
                        {% else %}
                            {{ annonce.price|number_format(0, ',', ' ') }} €
                        {% endif %}
                    </p>
                    <hr>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-house-door"></i>
                            <strong>Type :</strong> {{ annonce.type_bien|capitalize }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-rulers"></i>
                            <strong>Surface :</strong> {{ annonce.surface }} m²
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-grid"></i>
                            <strong>Pièces :</strong> {{ annonce.pieces }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-geo-alt"></i>
                            <strong>Ville :</strong> {{ annonce.city }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Description -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title h4">Description</h2>
                    <p class="card-text">{{ annonce.description|nl2br }}</p>
                </div>
            </div>
        </div>

        <!-- Formulaire de contact -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title h4">Contactez-nous</h2>
                    <form action="{{ url('contact') }}" method="POST">
                        <input type="hidden" name="annonce_id" value="{{ annonce.id }}">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Téléphone</label>
                            <input type="tel" class="form-control" id="phone" name="phone">
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="4" required>Bonjour, je suis intéressé(e) par ce bien.</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
