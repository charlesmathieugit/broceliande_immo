{% extends "layouts/base.html.twig" %}

{% block title %}Accueil - Broceliande Immo{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="jumbotron bg-light p-5 mb-4 rounded">
        <h1 class="display-4">Bienvenue chez Broceliande Immo</h1>
        <p class="lead">Découvrez nos biens immobiliers exceptionnels en Bretagne</p>
        <hr class="my-4">
        <p>Que vous cherchiez à acheter ou à louer, nous avons le bien qui vous correspond.</p>
        <div class="d-flex gap-2">
            <a class="btn btn-primary btn-lg" href="{{ url('annonces/vente') }}" role="button">Acheter</a>
            <a class="btn btn-outline-primary btn-lg" href="{{ url('annonces/location') }}" role="button">Louer</a>
        </div>
    </div>

    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Nos dernières ventes</h2>
            <a href="{{ url('annonces/vente') }}" class="btn btn-outline-primary">Voir toutes les ventes</a>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for annonce in ventes %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        {% if annonce.images is not empty %}
                            <img src="{{ asset(annonce.images[0]) }}" class="card-img-top" alt="{{ annonce.title }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <img src="{{ asset('img/default-property.jpg') }}" class="card-img-top" alt="Image par défaut" style="height: 200px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ annonce.title }}</h5>
                            <p class="card-text">
                                <strong class="text-primary">{{ annonce.price|number_format(0, ',', ' ') }} €</strong><br>
                                <i class="bi bi-rulers"></i> {{ annonce.surface }} m² - 
                                <i class="bi bi-house-door"></i> {{ annonce.pieces }} pièces<br>
                                <i class="bi bi-geo-alt"></i> {{ annonce.city }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ url('annonce/' ~ annonce.id) }}" class="btn btn-primary">
                                    Voir le détail
                                </a>
                                <span class="badge bg-success">{{ annonce.type_bien|capitalize }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Nos dernières locations</h2>
            <a href="{{ url('annonces/location') }}" class="btn btn-outline-primary">Voir toutes les locations</a>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for annonce in locations %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        {% if annonce.images is not empty %}
                            <img src="{{ asset(annonce.images[0]) }}" class="card-img-top" alt="{{ annonce.title }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <img src="{{ asset('img/default-property.jpg') }}" class="card-img-top" alt="Image par défaut" style="height: 200px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ annonce.title }}</h5>
                            <p class="card-text">
                                <strong class="text-primary">{{ annonce.price|number_format(0, ',', ' ') }} €/mois</strong>
                                {% if annonce.charges %}
                                    <small class="text-muted">(+ {{ annonce.charges|number_format(0, ',', ' ') }} € charges)</small>
                                {% endif %}<br>
                                <i class="bi bi-rulers"></i> {{ annonce.surface }} m² - 
                                <i class="bi bi-house-door"></i> {{ annonce.pieces }} pièces<br>
                                <i class="bi bi-geo-alt"></i> {{ annonce.city }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ url('annonce/' ~ annonce.id) }}" class="btn btn-primary">
                                    Voir le détail
                                </a>
                                <span class="badge bg-success">{{ annonce.type_bien|capitalize }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
